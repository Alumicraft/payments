{
    "name": "Stripe Settings",
    "module": "Payments",
    "doctype": "DocType",
    "issingle": 1,
    "editable_grid": 1,
    "track_changes": 1,
    "engine": "InnoDB",
    "fields": [
        {
            "fieldname": "api_credentials_section",
            "fieldtype": "Section Break",
            "label": "API Credentials"
        },
        {
            "fieldname": "api_key",
            "fieldtype": "Password",
            "label": "Stripe Secret Key",
            "reqd": 1,
            "description": "Your Stripe Secret Key (starts with sk_live_ or sk_test_)"
        },
        {
            "fieldname": "publishable_key",
            "fieldtype": "Data",
            "label": "Stripe Publishable Key",
            "description": "Your Stripe Publishable Key (starts with pk_live_ or pk_test_)"
        },
        {
            "fieldname": "webhook_secret",
            "fieldtype": "Password",
            "label": "Webhook Signing Secret",
            "description": "Signing secret from Stripe webhook configuration (starts with whsec_)"
        },
        {
            "fieldname": "column_break_1",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "test_mode",
            "fieldtype": "Check",
            "label": "Test Mode",
            "default": 1,
            "description": "Check if using test API keys"
        },
        {
            "fieldname": "configuration_section",
            "fieldtype": "Section Break",
            "label": "Configuration"
        },
        {
            "fieldname": "success_url",
            "fieldtype": "Data",
            "label": "Success Redirect URL",
            "default": "/thank-you",
            "description": "URL to redirect after successful payment"
        },
        {
            "fieldname": "cancel_url",
            "fieldtype": "Data",
            "label": "Cancel Redirect URL",
            "default": "/",
            "description": "URL to redirect if payment is cancelled"
        },
        {
            "fieldname": "column_break_2",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "enable_automatic_checkout",
            "fieldtype": "Check",
            "label": "Enable Automatic Checkout",
            "default": 1,
            "description": "Automatically create Stripe Invoice when Payment Request is saved"
        },
        {
            "fieldname": "wire_transfer_section",
            "fieldtype": "Section Break",
            "label": "Wire Transfer Details (for International Customers)",
            "collapsible": 1
        },
        {
            "fieldname": "bank_name",
            "fieldtype": "Data",
            "label": "Bank Name"
        },
        {
            "fieldname": "routing_number",
            "fieldtype": "Data",
            "label": "Routing Number"
        },
        {
            "fieldname": "account_number",
            "fieldtype": "Data",
            "label": "Account Number"
        },
        {
            "fieldname": "swift_code",
            "fieldtype": "Data",
            "label": "SWIFT Code"
        }
    ],
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1
        }
    ],
    "sort_field": "modified",
    "sort_order": "DESC"
}